{
  "name": "coalesce",
  "version": "1.0.0",
  "description": "discussion forum",
  "main": "index.ts",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "start": "NODE_ENV=production node --loader ts-node/esm index.ts",
		"start-client": "cd Coalesce_frontend && npm run start",
		"build-client": "cd Coalesce_frontend && npm run build",
		"copy-build-folder": "cd Coalesce_frontend && cp -r build ..",
		"install-client": "cd Coalesce_frontend && npm install",
    "test": "NODE_ENV=test jest --verbose --runInBand",
    "dev": "NODE_ENV=development ts-node-dev index.ts",
    "lint": "node_modules/.bin/eslint .",
    "cypress": "cypress open"
  },
  "author": "vres",
  "license": "ISC",
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.13.5",
    "morgan": "^1.10.0",
    "node-uuid": "^1.4.8",
    "socket.io": "^4.2.0",
    "ws": "^8.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/jquery": "^3.5.11",
    "@types/node": "^17.0.6",
    "@types/node-uuid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "cross-env": "^7.0.3",
    "cypress": "^9.2.0",
    "eslint": "^7.32.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^27.0.6",
    "json-server": "^0.16.3",
    "nodemon": "^2.0.12",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
